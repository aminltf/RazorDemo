@page
@model Presentation.Pages.Employee.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Employee</title>
    
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Delete Employee</h2>

        <p>Are you sure you want to delete the employee: <strong>@($"{Model.Employee.FirstName} {Model.Employee.LastName}")</strong>?</p>

        <form method="post">
            <input type="hidden" asp-for="Employee.Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-page="/Employee/Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>

   </body>
</html>